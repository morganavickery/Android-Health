<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.morgana4.finalproject.Home">

    <TextView
        android:layout_width="241dp"
        android:layout_height="50dp"
        android:text="Welcome to Android Health!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.065"
        android:id="@+id/titleView" />

    <Button
        android:id="@+id/yogaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRACK YOUR BALANCE"
        android:layout_marginLeft="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/titleView"
        android:onClick="swapYoga"/>

    <Button
        android:id="@+id/distanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRACK YOUR DISTANCE"
        android:layout_marginTop="84dp"
        app:layout_constraintTop_toBottomOf="@+id/yogaButton"
        android:layout_marginLeft="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:onClick="swapDistance"/>


</android.support.constraint.ConstraintLayout>
